#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include "linux_kbhit.h"

#include <termios.h>

#include<time.h>

int getch(void) {
	int ch;
	struct termios old;
	struct termios new;
	tcgetattr(0, &old); new = old;
	new.c_lflag &= ~(ICANON|ECHO);
	new.c_cc[VMIN] = 1;
	new.c_cc[VTIME] = 0;
	tcsetattr(0, TCSAFLUSH, &new);
	ch = getchar();
	tcsetattr(0, TCSAFLUSH, &old);
	return ch;
}

void gotoxy(int x,int y) // 좌표이동함수

{

	printf("\033[%d;%df", y, x);
	fflush(stdout);


}



struct nemo1{ //네모 구조체

	int x,y;

	int speed;

	int bkspeed;

};



typedef struct nemo1 nemo; //네모 이름 변경



struct ningen1{ //내캐릭터 구조체

	int x,y;

};

typedef struct ningen1 nins; //내캐릭터 이름 변경



void nemo_spawnpos(nemo *ne){

	ne->x= rand()%36 * 2 + 4;

	ne->y= rand()%4;

}



void nemo_speed(nemo *ne){

	ne->speed=rand()%2;

}



int main() //메인

{

	srand(time(NULL));

	int i;

	int loop;

	char move;

	loop=1;

	nins nin;

	nemo nem[40];

	nin.x=22;

	nin.y=23;

	for (i=0;i<25;++i){

		gotoxy(76,i);

		printf("▩");

	}

	for (i=0;i<25;++i){

		gotoxy(2,i);

		printf("▩");

	}

	gotoxy(2, 24);

	for(i = 0; i < 38; ++i) {

		printf("▩");

	}

	for (i=0;i<40;++i){

		nemo_spawnpos(&nem[i]);

		nemo_speed(&nem[i]);

		nem[i].bkspeed=nem[i].speed;

		gotoxy(nem[i].x,nem[i].y);

		printf("□");

	}

	while (loop){

		for (i=0;i<40;++i){

			if (nem[i].y==nin.y && nem[i].x==nin.x){

				loop=0;

				gotoxy(33,12);

				printf("Game Over \n");

			}

		}

		gotoxy(nin.x,nin.y);

		printf("S");

		sleep(3);

		for (i=0;i<40;i++){

			if (nem[i].speed>0)

				nem[i].speed-=1;

			else {

				if (nem[i].y<23){

					gotoxy(nem[i].x,nem[i].y);

					printf(" ");

					nem[i].y+=1;

					gotoxy(nem[i].x,nem[i].y);

					printf("□");}

				else {

					gotoxy(nem[i].x,nem[i].y);

					printf(" ");

					nemo_spawnpos(&nem[i]);

					gotoxy(nem[i].x,nem[i].y);}

			}

		}

		if (linux_kbhit()){

			gotoxy(nin.x,nin.y);

			move=getch();

			printf(" ");



			switch(move){



			case 'a':

				if (nin.x<6)
				{
					nin.x=5;
					break;
				}

				else{
					nin.x-=2;
					break;}

			case 'd':
				if (nin.x<74){
					nin.x+=2;
					break;}
			}
		}
	}

}
